datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String           @id @default(cuid())
  name     String           @default("")
  email    String           @unique @default("")
  password String
  posts    ContentSnippet[] @relation("ContentSnippet_author")
  role     Role?            @relation("User_role", fields: [roleId], references: [id])
  roleId   String?          @map("role")

  @@index([roleId])
}

model ContentSnippet {
  id          String    @id @default(cuid())
  title       String    @default("")
  status      String?   @default("draft")
  content     String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate DateTime?
  author      User?     @relation("ContentSnippet_author", fields: [authorId], references: [id])
  authorId    String?   @map("author")

  @@index([authorId])
}

model Role {
  id              String    @id @default(cuid())
  name            String    @default("")
  users           User[]    @relation("User_role")
  accessibleLists ListKey[] @relation("ListKey_roles")
}

model ListKey {
  id    String @id @default(cuid())
  key   String @unique @default("")
  roles Role[] @relation("ListKey_roles")
}